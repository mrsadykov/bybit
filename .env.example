# --- Telegram (обязательно для уведомлений о сделках и алертах) ---
# TELEGRAM_BOT_TOKEN=123:ABC...
# TELEGRAM_CHAT_ID=-1001234567890

# Telegram health heartbeat: отдельный бот/чат для проверки "сервер жив". См. TELEGRAM_HEARTBEAT_SETUP.md
# TELEGRAM_HEALTH_BOT_TOKEN=
# TELEGRAM_HEALTH_CHAT_ID=
# Отправлять уведомления в Telegram через очередь (true = меньше задержек при сбоях API, нужен queue:work)
# TELEGRAM_QUEUE=false

# Health check (php artisan health:check): макс. возраст последнего запуска ботов (мин), кулдаун алерта (мин)
# HEALTH_LAST_RUN_MAX_MINUTES=15
# HEALTH_ALERT_COOLDOWN_MINUTES=60

# --- Торговля и боты (по желанию) ---
# REAL_TRADING=false
# Лимит открытых позиций по всем спот-ботам (например 5). null = без лимита
# TRADING_MAX_OPEN_POSITIONS_TOTAL=5

# Снижение риска (см. docs/STRATEGY_TUNING.md):
# 1) Множитель размера позиции: 0.5 = торговать половинным размером (spot/futures/btc-quote)
# TRADING_POSITION_SIZE_MULTIPLIER=1
# 2) Глобальный стоп-лосс (%): если задан — подменяет значение в боте (например 2 = ужесточить)
# TRADING_STOP_LOSS_PERCENT_OVERRIDE=
# 3) Реже торговать: true = RSI 35/65 вместо порогов бота; мин. минут между открытиями позиций по боту
# TRADING_CONSERVATIVE_RSI=false
# TRADING_MIN_MINUTES_BETWEEN_OPENS=
# 4) Пауза новых открытий: при дневном убытке >= N USDT новые BUY не выставляются (SL/TP и закрытие по сигналу работают)
# TRADING_PAUSE_NEW_OPENS_DAILY_LOSS_USDT=

# Трейлинг-стоп (спот): продажа при откате от макс. цены с входа (%)
# TRADING_TRAILING_STOP_PERCENT=2
# Активация: начать трейлинг только после роста цены на N% от входа (0 = с входа)
# TRADING_TRAILING_STOP_ACTIVATION_PERCENT=1

# Фильтр тренда по длинной EMA (спот): не открывать лонг, если цена ниже длинной EMA
# TRADING_TREND_FILTER_ENABLED=false
# Период длинной EMA (50 или 200; при 200 запрашивается больше свечей)
# TRADING_TREND_FILTER_EMA_PERIOD=50
# Допуск: разрешить цену до N% ниже EMA (0 = строго выше EMA)
# TRADING_TREND_FILTER_TOLERANCE_PERCENT=0

# Стратегия RSI+EMA: «глубокая перепроданность» — при очень низком RSI разрешить BUY чуть ниже EMA (больше входов по SOL/BNB)
# TRADING_RSI_DEEP_OVERSOLD=28
# TRADING_EMA_TOLERANCE_DEEP_PERCENT=2
# Алерт в Telegram при дневном убытке по споту >= N USDT (раз в день)
# TRADING_ALERT_DAILY_LOSS_USDT=20
# Алерт при N+ убыточных сделках подряд
# TRADING_ALERT_LOSING_STREAK=3
# Алерт при достижении суммарной прибыли >= N USDT
# TRADING_ALERT_TARGET_PROFIT_USDT=100

# Фьючерсы: включить/выключить глобально; dry_run по умолчанию для новых ботов
# FUTURES_ENABLED=true
# FUTURES_DRY_RUN_DEFAULT=true
# Алерт при дневном убытке по всем фьючерсным ботам <= -N USDT (раз в день)
# FUTURES_ALERT_DAILY_LOSS_USDT=50

# BTC-quote: включить глобально
# BTC_QUOTE_ENABLED=true
# Алерт при дневном убытке по всем BTC-quote ботам <= -N BTC (раз в день)
# BTC_QUOTE_ALERT_DAILY_LOSS_BTC=0.001
